<div class="container-fluid index-container" >
  <div class="container-fluid carousel-container">
    <% image_urls = [] %>
    <% image_urls.push(asset_url('cake_1.jpg')) %>
    <% image_urls.push(asset_url('palha_1.jpg')) %>
    <% image_urls.push(asset_url('Brigadeiros_1.jpg')) %>
    <%# carousel_for(image_urls) %>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag('cake_1.jpg') %>
        </div>
        <div class="carousel-caption"><h2>xxx</h2></div>
        <div class="item">
          <%= image_tag('Brigadeiros_1.jpg') %>
        </div>
        <div class="carousel-caption"><h2>xxx</h2></div>
        <div class="item">
          <%= image_tag('palha_1.jpg') %>
        </div>
        <div class="carousel-caption"><h2>xxx</h2></div>
      </div>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="container-fluid" style="background-color: #5ab7f2; min-height: 950px; ">
  </div>
</div>
<script type="application/javascript">
    setWorldBackgroundHeight();
    window.addEventListener('resize', setWorldBackgroundHeight);
    // window.resize callback function
    function setWorldBackgroundHeight() {
        document.getElementById("index-background").style.minHeight = "" + ($(window).height() - 100) + "px";
    }
</script>