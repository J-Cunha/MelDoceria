          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header pull-left brand-img-container ">
            <%= link_to (image_tag 'logo_trans.png', class: "img-responsive ", height: 150, alt: "Facebook Page"), root_path, class: "navbar-brand" %>
