          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
<%# render "layouts/navbar/navbar_slogan_text" %>
            </ul>
            <ul class="nav navbar-nav navbar-right nav-items-container " id="nav-items-container">
              <% if user_signed_in? == true %>
                  <li class="<%= "active" if (current_page?(user_session_path)) %>"><%= link_to t(:calc_payment).to_s.capitalize, crypto_addresses_path %></li>
                  <li class="<%= "active" if (current_page?(user_session_path)) %>"><%= link_to t(:my_account).to_s.capitalize, destroy_user_session_path %></li>
                  <li class="<%= "active" if current_page?(contact_path) %>"><%= link_to t(:contact).to_s.capitalize, new_contact_path %></li>
