<h1>Product Sizes</h1>

<table>
  <thead>
    <tr>
      <th>Product size category</th>
      <th>Name</th>
      <th>Weight</th>
      <th>Width</th>
      <th>Height</th>
      <th>Depth</th>
      <th>Value</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_sizes.each do |product_size| %>
      <tr>
        <td><%= product_size.product_size_category %></td>
        <td><%= product_size.name %></td>
        <td><%= product_size.weight %></td>
        <td><%= product_size.width %></td>
        <td><%= product_size.height %></td>
        <td><%= product_size.depth %></td>
        <td><%= product_size.value %></td>
        <td><%= link_to 'Show', product_size %></td>
        <td><%= link_to 'Edit', edit_product_size_path(product_size) %></td>
        <td><%= link_to 'Destroy', product_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

