<%= simple_form_for(@product_size) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :product_size_category %>
    <%= f.input :name %>
    <%= f.input :weight %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :depth %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
