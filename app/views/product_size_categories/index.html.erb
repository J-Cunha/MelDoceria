<p id="notice"><%= notice %></p>

<h1>Product Size Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_size_categories.each do |product_size_category| %>
      <tr>
        <td><%= product_size_category.name %></td>
        <td><%= link_to 'Show', product_size_category %></td>
        <td><%= link_to 'Edit', edit_product_size_category_path(product_size_category) %></td>
        <td><%= link_to 'Destroy', product_size_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

