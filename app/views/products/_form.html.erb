<%= simple_form_for(@product) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-lg-12">
            <div class="row">
              <div class="col-xs-12 col-sm-7 ">
                <%= f.association :category %>
                <%= f.input :name %>
              </div>
              <div class="col-xs-12 col-sm-5">
                <%= f.association :flavors %>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <%= (image_tag @product.product_image, class: 'img-responsive') unless @product.product_image.nil? || @product.product_image.to_s.empty? %>
                <%= f.file_field :product_image %>
              </div>
            </div>
            <br>
            <h3>Tamanhos</h3>
            <div class="container">
              <%= f.simple_fields_for :product_sizes do |product_size| %>
                  <%= render 'products/product_size_fields', :f => product_size %>
              <% end %>
              <%= link_to_add_association "Adicionar Tamanho", f, :product_sizes, class: 'btn btn-success  ' %>
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col-sm-12">
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
